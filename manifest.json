{
  "name": "絵文字くん",
  "version": "1.0.1",
  "manifest_version": 2,
  "description": "殺伐としたIssue、PullRequestに一時の癒やしを・・・",
  "permissions": [
    "tabs",
    "webRequest",
    "webRequestBlocking",
    "contextMenus",
    "http://*/*",
    "https://*/*"
  ],
  "browser_action": {
    "default_icon": {
      "19": "./images/icon19.png",
      "38": "./images/icon38.png"
    },
    "default_title": "Setting",
    "default_popup": "./popup/popup.html"
  },
  "background": {
    "scripts": ["./background/background.js"]
  },
  "content_scripts": [
    {
      "matches": [ "https://github.com/*", "https://gitlab.*" ],
      "include_globs": [ "*/issues/*", "*/pull/*", "*/merge_requests/*" ],
      "js": ["./lib/jquery-3.0.0.min.js", "./content/content.js"],
      "run_at":  "document_start"
    }
  ],
  "icons": {
    "16":  "./images/icon16.png",
    "48":  "./images/icon48.png",
    "128": "./images/icon128.png"
  }
}
